var myvideo=document.getElementById("demo");
myvideo.addEventListener("error",error_listen);
myvideo.addEventListener("play",play_listen);
myvideo.addEventListener("loadeddata",loadeddata_listen);
myvideo.addEventListener("ended",ended_listen);
function clic_play_pause(){
if(myvideo.paused)
  myvideo.play();
  else myvideo.pause();
  }
  function play(){

  if(myvideo.paused){
   myvideo.play();
  }
  }
  
  function load(){

  
  }
  function error_listen(){

  window.video.error_listen();
  }
  function play_listen(){

  window.video.play_listen();
  }
  function loadeddata_listen(){
 
  window.video.loadeddata_listen();
  }
  function ended_listen(){

  window.video.ended_listen();
  }
